<Window x:Class="IoTDeviceSecurityScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IoT Device Security Scanner" Height="450" Width="800"
        Background="#1e1e1e" Foreground="White" FontFamily="Segoe UI" FontSize="14">

    <Grid Margin="10">
        <Label Content="Target IP:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0"/>
        <TextBox Name="txtIP" Width="300" Height="30" Margin="80,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <CheckBox Name="chkFullScan" Content="Full Port Range Scan (1-65535)" Margin="0,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Button Name="btnScan" Content="Scan" Width="100" Height="30" Margin="0,80,0,0" Click="btnScan_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#4CAF50" Foreground="White"/>

        <TextBox Name="txtResults" Margin="0,130,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                 AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Top" Height="250" />
    </Grid>
</Window>
